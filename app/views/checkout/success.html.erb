<div class="container success-page">
	<div class="row">
  	<div class="col-md-6 mx-auto mt-5">
    	<div class="payment shadow">
      	<div class="payment_header">
        	<div class="check"><i class="fa fa-check" aria-hidden="true"></i></div>
        </div>
        <div class="content">
        	<h1>Payment Success !</h1>
          <h3>Checkout Status: <%= @session_with_expand.payment_status %></h3>
        	<h5> Amount Paid : <%= @session_with_expand.amount_total/100.to_f %> <%= @session_with_expand.currency %></h5>
					<h6>For the Product(s)</h6>
          <p>
						<% @session_with_expand.line_items.data.each do |line_item| %>
							<% event = Event.find_by(stripe_event_id: line_item.price.product) %>
							<br>
							<%= event.name %>
						<% end %>
					</p>
          </p>
          <%= link_to "Go to Home", root_path, class:"btn btn-success rounded-pill" %>
        </div>
      </div>
    </div>
  </div>
</div>
